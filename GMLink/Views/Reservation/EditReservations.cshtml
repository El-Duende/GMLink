@using GMLink.Controllers
@model Reservation
@{
    ViewBag.Title = "Edit Reservation";
    Layout = "_Layout";
}
   
<form asp-action="EditReservations" method="post">
    <input type="hidden" asp-for="ReservationID" />
    <input type="hidden" asp-for="GameMaster" value="@AccountController.CurrentUser.UserName"  />

    @if(AccountController.CurrentUser.UserName == "Admin123")
    {
        <div class="form-group">
            <label asp-for="GameMaster">Set GameMaster</label>
            <textarea asp-for="GameMaster" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Description">Set Booked by</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
    }

    <div class="form-group">
        <label asp-for="About"></label>
        <textarea asp-for="About" class="form-control"></textarea>
    </div>
    <div class="form-group">
        
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>
    <div class="form-group">

        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
    </div>
    <div class="form-group">

        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="card-block m-2">
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-controller="Reservation" asp-action="myReservations" class="btn btn-md btn-warning">Cancel</a>
        </div>
    </div>
</form>