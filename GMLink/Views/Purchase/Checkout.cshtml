@model Purchase
<div class="row ms-1">
    <h2>Check out now</h2>
    <p>Please enter in a group name for your reservation!</p>
    <form asp-action="Checkout" method="post">
        <h3>Group Name</h3>
        <div class="form-group">
            <label>Name on card:</label><input asp-for="NameOnCard" class="form-control" />
        </div>
        <div class="form-group">
            <label>Card number:</label><input asp-for="CardNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label>CSV:</label><input asp-for="CardCSV" class="form-control" />
        </div>
        <div class="form-group">
            <label>Group Name:</label><input asp-for="GroupName" class="form-control" />
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Complete Order" />
        </div>
    </form>
</div>